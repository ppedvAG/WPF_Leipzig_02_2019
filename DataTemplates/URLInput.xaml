<Window x:Class="DataTemplates.URLInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataTemplates"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="URLInput" Height="100" >
    <Grid>
        <TextBox VerticalAlignment="Center" Text="{Binding SelectedURL,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
        <Button Click="Button_Click_OK" HorizontalAlignment="Right" VerticalAlignment="Bottom">OK</Button>
        <Button Click="Button_Click_Abbrechen" HorizontalAlignment="Left" VerticalAlignment="Bottom">Abbrechen</Button>
    </Grid>
</Window>
